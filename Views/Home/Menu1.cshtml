
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles",required:false)
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.7.1.intellisense.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.elevateZoom-3.0.8.min.js"></script>
    <script src="~/Scripts/jquery.elevatezoom.js"></script>
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <style type="text/css">
.item {
    color: #666;
    background: #333;
    height: 300px;
    line-height: 300px; /* Align the text vertically center. */
    font-size: 52px;
    text-align: center;    
    font-family: "trebuchet ms", sans-serif;    
}
.carousel{
    margin-top: 40px;
}
.carousel-control{
	top: 50%;
}
.bs-example{
	margin: 20px;

}
 body {
            padding-top:50px;
            padding-bottom:50px;
        }
 
</style>
</head>


<body >
   
    <div class="bs-example">
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="navbar-inner">
            <a href="#" class="brand" style="padding-left:50px">Online Ad Posting</a>
            <ul class="nav">
                <li>@Html.ActionLink("Home","Index","Home")</li>
                <li>@Html.ActionLink("About","About","Home")</li>
                <li>@Html.ActionLink("Contact","Contact","Home")</li>
                <li>@Html.ActionLink("Search","Search","Search")</li>
                 <li>@Html.ActionLink("Post Ad", "Post", "Home")</li>
                 <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
            </ul>
            <div style="padding-right:30px">
                @if (Session["name"] == null)
                {
                    using (Html.BeginForm("Signup", "Home", FormMethod.Post))
                    {

                        <input class=" btn btn-info pull-right" type="submit" value="SignUp"/>
                    }
                    using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <input class=" btn btn-info pull-right" type="submit" id="login" value ="Login"/>
                    }
                    using (Html.BeginForm("Index", "Admin", FormMethod.Post))
                    {
                        <input class=" btn btn-info pull-right" type="submit" id="admin" value ="Admin Login"/>
                    }
                }
                else
                {
                    using (Html.BeginForm("Logout", "Home", FormMethod.Post))
                    {
                        <input class=" btn btn-info pull-right" type="submit" id="logout" value ="LogOut"/>
                    }
                }
            </div>
         </div>
    </div>
</div>
    
<div class="bs-example">
    <div id="myCarousel" class="carousel slide">
    	<!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            
        </ol>   
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item">
                
                <img src="~/Content/themes/one1.jpg" alt="the-buzz-img3"  />

            </div>
            <div class="item">
                <img src="~/Content/themes/s11.jpg" alt="the-buzz-img3"   />
            </div>

           
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
</div>
    <div class="span4" >

        

    </div>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery");
    @RenderSection("scripts", required: false);
    <div>

    </div>

